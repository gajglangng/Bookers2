<!--投稿一覧-->

<div class="body">
  <div class="container">

<!--エラーメッセージ-->
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>　

 <!--サイドバー[userinfo&newbook] -->
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <table class="table">
          <tbody> 
            <tr></tr>
            <tr>
	            <th>name</th>
	            <th><%= @user.name %></th>
            </tr>
            <tr>
	            <th>introduction</th>
	            <th><%= @user.introduction %></th>
            </tr>
          </tbody></table>
        
         <div class="row">
           <%= link_to"", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block"%> 
         </div>
    
    
    <!--新規投稿-->
      <h2 class="mt-3">New book</h2>
       <form action="/books" accept-charset="UTF-8" method="post">
        <div class="form-group">
          <label for="book_title">Title</label>
          <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        </div>
       </form>
      </div> 
  
    <!--自分の投稿一覧-->
     <div class="col-md-8 offset-md-1">
        <h2>Boook detail</h2>
        <table class="table">
          <thead>
            <tr>
              <th><!--ProfileImage--></th>
              <th></th>
              <th></th>
              <th>Edit</th>
              <th>Destroy</th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td> <!--book_path(詳細表示)で(|book|)の投稿(.id)を持ってくる-->
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
     </div>
    </div>

  </div>
</div>  