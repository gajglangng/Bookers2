 <!--投稿-->
 <div class="body">
  <div class="container">
   <p id="notice">
    <%= notice %>
   </p>
   
   <!--サイドバー[userinfo&newbook] -->
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <table class="table">
          <tbody> 
            <tr></tr>
            <tr>
	            <th>name</th>
	            <th><%= @user.name %></th>
            </tr>
            <tr>
	            <th>introduction</th>
	            <th><%= @user.introduction %></th>
            </tr>
          </tbody></table>
        
         <div class="row">
           <%= link_to"", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block"%> 
         </div>
    
    
    <!--新規投稿-->
      <h2 class="mt-3">New book</h2>
       <form action="/books" accept-charset="UTF-8" method="post">
        <div class="form-group">
           <%= f.label :Title %>
           <%= f.text_field :title, class: "col-xs-12" %>
        </div>
        <div class="form-group">
           <%= f.label :Opinion %>
           <%= f.text_area :body, class: "col-xs-12" %>
        </div>
        <div class="form-group">
           <%= f.submit class: "btn btn-primary col-xs-12" %>
         
        </div>
       </form>
      </div> 
      
      
      <!--投稿詳細-->
      <div class="col-md-8 offset-md-1">
    		<h2>Book detail</h2>
    	 <table class="table table-user-show">
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
   </div>
   
  </div>
 </div>