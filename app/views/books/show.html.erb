 <!--投稿-->
 <div class="body">
  <div class="container">
   <p id="notice">
    <%= notice %>
   </p>
   
   <!--サイドバー[userinfo&newbook] -->
     <%= render 'users/user', user: @user %>
     <%= render 'books/book', book: @book %>
      
      <!--投稿詳細-->
      <div class="col-md-8 offset-md-1">
    	<h1>Book detail</h1>
     <table class="table table-user-show">
        <tr>
          <td><%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
      </div>
   
  </div>
 </div>