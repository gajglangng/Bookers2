<h2>New book</h2>
  <div class="form-group">
   <label for="book_title">Title</label>
  </div>
 
  <div class="form-group">
   <label for="book_opinion">Opinion</label>
  </div>
  
  <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  </div>
  
  <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      </table>
  </div>
  
<!--ユーザーの詳細-->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
  <p><%= link_to"User in", edit_user_path(@user.id) %></p>
  <% end %>
</div>

<!--ユーザーの投稿一覧-->
<%= render 'post_images/list', post_images: @post_images %>
<!--違うフォルダに部分テンプレートがあるため、フォルダ名も指定する必要がある-->

 